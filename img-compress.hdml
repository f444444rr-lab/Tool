    <script>
        // DOM Elements
        const fileInput = document.getElementById('file-input');
        const compressionSlider = document.getElementById('compression-level');
        const compressionValue = document.getElementById('compression-value');
        const qualitySlider = document.getElementById('image-quality');
        const qualityValue = document.getElementById('quality-value');
        const originalPreview = document.getElementById('original-preview');
        const compressedPreview = document.getElementById('compressed-preview');
        const originalInfo = document.getElementById('original-info');
        const compressedInfo = document.getElementById('compressed-info');
        const compressBtn = document.getElementById('compress-btn');
        const downloadBtn = document.getElementById('download-btn');
        const dropArea = document.getElementById('drop-area');
        
        // Variables to store image data
        let originalImage = null;
        let compressedImage = null;
        let originalSize = 0;
        let compressedSize = 0;
        
        // Update slider values
        compressionSlider.addEventListener('input', () => {
            compressionValue.textContent = `${compressionSlider.value}%`;
        });
        
        qualitySlider.addEventListener('input', () => {
            qualityValue.textContent = `${qualitySlider.value}%`;
        });
        
        // Handle file selection
        fileInput.addEventListener('change', (e) => {
            if (e.target.files && e.target.files[0]) {
                processImage(e.target.files[0]);
            }
        });
        
        // Drag and drop functionality
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, preventDefaults, false);
        });
        
        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }
        
        ['dragenter', 'dragover'].forEach(eventName => {
            dropArea.addEventListener(eventName, highlight, false);
        });
        
        ['dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, unhighlight, false);
        });
        
        function highlight() {
            dropArea.style.borderColor = '#2575fc';
            dropArea.style.backgroundColor = '#e6eeff';
        }
        
        function unhighlight() {
            dropArea.style.borderColor = '#6a11cb';
            dropArea.style.backgroundColor = '#f8f9ff';
        }
        
        dropArea.addEventListener('drop', handleDrop, false);
        
        function handleDrop(e) {
            const dt = e.dataTransfer;
            const file = dt.files[0];
            processImage(file);
        }
        
        // Process the uploaded image
        function processImage(file) {
            if (!file || !file.type.match('image.*')) {
                alert('Please upload an image file.');
                return;
            }
            
            const reader = new FileReader();
            
            reader.onload = function(e) {
                originalImage = new Image();
                originalImage.onload = function() {
                    // Display original image
                    originalPreview.innerHTML = '';
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    originalPreview.appendChild(img);
                    
                    // Calculate and display original file size
                    originalSize = file.size;
                    originalInfo.textContent = `Size: ${formatFileSize(originalSize)} • ${originalImage.width}×${originalImage.height}`;
                    
                    // Enable compress button
                    compressBtn.disabled = false;
                    downloadBtn.disabled = true;
                };
                originalImage.src = e.target.result;
            };
            
            reader.readAsDataURL(file);
        }
        
        // Compress image button handler
        compressBtn.addEventListener('click', () => {
            if (!originalImage) return;
            
            const compressionLevel = compressionSlider.value / 100;
            const quality = qualitySlider.value / 100;
            
            // Create canvas for compression
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            
            // Calculate new dimensions if needed (for higher compression levels)
            let width = originalImage.width;
            let height = originalImage.height;
            
            if (compressionLevel > 0.7) {
                const ratio = 1 - (compressionLevel - 0.7) / 3;
                width = Math.floor(originalImage.width * ratio);
                height = Math.floor(originalImage.height * ratio);
            }
            
            canvas.width = width;
            canvas.height = height;
            
            // Draw image on canvas with new dimensions
            ctx.drawImage(originalImage, 0, 0, width, height);
            
            // Get compressed image as data URL
            const compressedDataURL = canvas.toDataURL('image/jpeg', quality);
            
            // Display compressed image
            compressedPreview.innerHTML = '';
            const img = document.createElement('img');
            img.src = compressedDataURL;
            compressedPreview.appendChild(img);
            
            // Calculate compressed size
            compressedSize = calculateDataURLSize(compressedDataURL);
            const saved = originalSize - compressedSize;
            const savedPercent = (saved / originalSize) * 100;
            
            compressedInfo.textContent = `Size: ${formatFileSize(compressedSize)} • ${width}×${height} • Saved ${savedPercent.toFixed(1)}%`;
            
            // Enable download button
            downloadBtn.disabled = false;
            
            // Set download link
            downloadBtn.onclick = () => {
                const link = document.createElement('a');
                link.download = 'compressed-image.jpg';
                link.href = compressedDataURL;
                link.click();
            };
        });
        
        // Helper function to format file size
        function formatFileSize(bytes) {
            if (bytes < 1024) {
                return bytes + ' bytes';
            } else if (bytes < 1048576) {
                return (bytes / 1024).toFixed(2) + ' KB';
            } else {
                return (bytes / 1048576).toFixed(2) + ' MB';
            }
        }
        
        // Helper function to estimate data URL size
        function calculateDataURLSize(dataURL) {
            // Remove the data:image/jpeg;base64, part
            const base64 = dataURL.split(',')[1];
            // Calculate size in bytes: (base64 length * 3) / 4 - padding
            return (base64.length * 3) / 4;
        }
    </script>
